#include <bits/stdc++.h.>
using namespace std;

int max(int arr[],int n)
{
	int max1=arr[0];
	for(int i=1;i<n;i++)
	{
		if(arr[i]>max1)
			max1=arr[i];
	}
	return max1;
}
int min(int arr[], int n)
{
	int min1=arr[0];
	for(int i=1;i<n;i++)
	{
		if(arr[i]<min1)
		min1=arr[i];
	}
	return min1;
}

int main()
{

	int arr[]={1,2,3,4,5,6,7,8};
	int n= sizeof(arr)/sizeof(arr[0]);
	int max1,min1;
	max1= max(arr,n);
	cout<<"maximum is "<<max1<<endl;
	min1=min(arr,n);
	cout<<"minimum is "<<min1<<endl;


}
